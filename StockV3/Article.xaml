<Window x:Class="StockV3.Article"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockV3"
        mc:Ignorable="d"
         Title="Article" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox1"/>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="textBox1"/>
            <Button Content="Добавить" Click="Button_Click"/>
            <Button Content="Изменить" Click="Button_Click_1"/>
            <Button Content="Удалить" Click="Button_Click_2"/>
            <Button Content="Ок" Click="Button_Click_3"/>
        </StackPanel>
    </Grid>
</Window>