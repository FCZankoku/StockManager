<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StockV3">

    <Style x:Key="font1">
        <Setter Property="Control.FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Control.FontSize" Value="12"/>
    </Style>
    <Style TargetType="ListView" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="2"/>
    </Style>
    <Style TargetType="Menu" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="2"/>
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="2"/>
    </Style>
    <Style TargetType="ListBox" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="8"/>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="5"/>
    </Style>
</ResourceDictionary>