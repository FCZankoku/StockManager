<Window x:Class="StockV3.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockV3"
        mc:Ignorable="d"
       Title="Login" Height="275" Width="204">
    <StackPanel>
        <Label FontSize="15" HorizontalContentAlignment="Center" Content="Логин:" Width="100" Height="35"/>
        <TextBox Height="30" x:Name="loginBox" Width="120"/>

        <Label Margin="0,15,0,0" FontSize="15" HorizontalContentAlignment="Center" Content="Пароль:" Width="100" Height="35"/>
        <PasswordBox Height="30" x:Name="passwordBox" Width="120"/>

        <Button FontSize="15" Margin="0,20,0,0" Content="Вход" Width="120" Height="32" Click="Button_Click"/>
    </StackPanel>
</Window>
